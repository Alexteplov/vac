= form_for @vaccine do |f|
  -if @vaccine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vaccine.errors.count, "error")} prohibited this vaccine from being saved:"
      %ul
        - @vaccine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Наименование вакцины'
    = f.text_field :name
  .field
    = f.label 'Фактическая дата начала вакцинации'
    = f.date_select :fact, :prompt => { :day => 'День', :month => 'Месяц', :year => 'Год' }, 
:use_month_names =>['Январь','Февраль','Март','Апрель','Май','Июнь','Июль','Август','Сентябрь','Октябрь','Ноябрь','Декабрь',]
  .field
    = f.label 'Повторная вакцинация (в днях), разделение через запятую..'
    = f.text_field :planning
  .field
    = f.label 'Периодичность проведения вакцинации (к примеру каждые 3 года), период указывается в днях'
    = f.text_field :periodic
  .field
    = f.label 'Планируемаая дата начала вакцинации'
    = f.date_select :plan, :prompt => { :day => 'День', :month => 'Месяц', :year => 'Год' }, 
:use_month_names =>['Январь','Февраль','Март','Апрель','Май','Июнь','Июль','Август','Сентябрь','Октябрь','Ноябрь','Декабрь',]
  .actions
    = f.submit 'Сохранить изменения'
